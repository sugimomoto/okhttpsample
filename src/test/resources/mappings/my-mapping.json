{
    "mappings": [
        
        {
            "request": {
                "method": "POST",
                "urlPattern": "/foo_json_post",
                "headers": {
                    "Content-Type": {
                        "contains": "application/json"
                    },
                    "Accept": {
                        "matches": "application/json"
                    }
                },
                "bodyPatterns":[
                    {
                        "equalToJson" : {"bar": "buzz"}
                    }
                ]

            },
            "response": {
                "status": 200,
                "body": "{\"result\":\"created\"}",
                "headers": {
                    "Content-Type": "application/json"
                }
            }
        },
        {
            "request": {
                "method": "GET",
                "urlPath": "/foo_basic_authentication",
                "headers": {
                    "Accept": {
                        "equalTo": "application/json"
                    }
                },
                "basicAuthCredentials":{
                    "username" : "userName",
                    "password" : "password"
                }
            },
            "response": {
                "status": 200,
                "body": "{\"bar\":\"buzz\"}",
                "headers": {
                    "Content-Type": "application/json"
                }
            }
        },
        {
            "request": {
                "method": "GET",
                "urlPath": "/foo_query_parameters",
                "queryParameters":{
                    "$select" : {
                        "equalTo" : "id,name"
                    },
                    "$top":{
                        "equalTo": "10"
                    }
                },
                "headers": {
                    "Accept": {
                        "equalTo": "application/json"
                    }
                }
            },
            "response": {
                "status": 200,
                "body": "{\"bar\":\"buzz\"}",
                "headers": {
                    "Content-Type": "application/json"
                }
            }
        },
        {
            "request": {
                "method": "GET",
                "urlPattern": "/foo",
                "headers": {
                    "Accept": {
                        "matches": "text/.*"
                    }
                }
            },
            "response": {
                "status": 200,
                "body": "{\"bar\":\"buzz\"}",
                "headers": {
                    "Content-Type": "application/json"
                }
            }
        },
        {
            "request": {
                "method": "GET",
                "urlPattern": "/foo_external_file_with_body",
                "headers": {
                    "Accept": {
                        "matches": "text/.*"
                    }
                }
            },
            "response": {
                "status": 200,
                "bodyFileName": "responseSample.json",
                "headers": {
                    "Content-Type": "application/json"
                }
            }
        },
        {
            "request": {
                "method": "GET",
                "urlPattern": "/foo_json_body",
                "headers": {
                    "Accept": {
                        "matches": "text/.*"
                    }
                }
            },
            "response": {
                "status": 200,
                "jsonBody": {
                    "name":"hello"
                },
                "headers": {
                    "Content-Type": "application/json"
                }
            }
        }


    ]
}